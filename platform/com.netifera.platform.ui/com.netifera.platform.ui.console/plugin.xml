<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.netifera.platform.ui.console.ConsoleView"
            category="com.netifera.platform.ui.category.general"
            icon="icons/console.png"
            id="com.netifera.platform.views.console"
            name="Console"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="com.netifera.platform.views.console"
               minimized="false"
               ratio="0.5"
               relationship="fast">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
